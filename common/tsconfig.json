{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      "src"
    ]
  },
  "include": [
    "./**/*.ts", "./**/*.d.ts"
  ]
}
