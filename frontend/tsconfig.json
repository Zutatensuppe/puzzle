{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      "src",
    ],
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../common/src/*",
    "src/**/*.vue"
  ]
}
