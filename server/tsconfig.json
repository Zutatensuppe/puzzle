{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",
    "strict": true,
    // "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": [
      "src",
    ],
    "typeRoots": ["./types"],
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": [
    "./**/*.ts", "./**/*.d.ts"
  ]
}
